@model StoryBoard.ViewModels.StoryViewModel

@{
    ViewBag.Title = "Edit a Story";
}

<h2>Edit a Story</h2>

@using (Html.BeginForm("Edit", "MyStories", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit a story.</h4>
    <hr />
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.StoryId)
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Groups, new { @class = "col-md-2 control-label" })
        <div class="col-md-10"> 
            @{
                var list = ViewBag.MultiSelectGroups as MultiSelectList;
            }

            @Html.ListBox("Groups", list, new { @class = "form-control chzn-select" })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript" src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="@Url.Content("~/Content/chosen_v1.4.2/chosen.jquery.js")" type="text/javascript"></script>

<link href="@Url.Content("~/Content/chosen_v1.4.2/chosen.css")" rel="stylesheet" type="text/css"/>

<script>
    $(".chzn-select").chosen();
</script>

<style>
    .chosen-container .chosen-container-multi { width: 280px; }
</style>